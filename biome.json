{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "files": {
    "ignore": [
      ".vscode/**",
      "**/tsconfig.*.json",
      "**/node_modules",
      "**/.next",
      "**/types/**",
      "**/test-results/**",
      "**/dist/**",
      "backend",
      "playwright-report",
      "**/styled-system/**",
      "**/.turbo/**",
      "pnpm-lock.yaml"
    ],
    "ignoreUnknown": true
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space"
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double"
    }
  }
}
